<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10sdp">

    <LinearLayout
        android:id="@+id/loutData"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:background="@drawable/login_edittext_bg"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/_5sdp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="match_parent"
            android:layout_marginVertical="@dimen/_5sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/sample"
            app:riv_border_width="0dp"
            app:riv_corner_radius="@dimen/_5sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_5sdp">

            <com.dnk.dreamchildparenting.Custom.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Booming Bathtub"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp"
                app:CustomTextviewFont="@string/textsemibold" />

            <com.dnk.dreamchildparenting.Custom.CustomTextView
                android:id="@+id/txtPlanAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:gravity="center_vertical"
                android:text="Little Engineer Pretend Toolbox Construction Tools, Role Play Engineer Workshop Tool Kit Play Tool for Preschoolers KidsLittle."
                android:textColor="@color/c_8d95a1"
                android:textSize="@dimen/_10sdp"
                app:CustomTextviewFont="@string/textsemimedium" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>