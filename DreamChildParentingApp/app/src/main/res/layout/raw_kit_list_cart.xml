<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/login_edittext_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icnPlan"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@drawable/icn_plan" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_toLeftOf="@+id/loutAmount"
                android:layout_toRightOf="@+id/icnPlan"
                android:orientation="vertical">

                <com.dnk.dreamchildparenting.Custom.CustomTextView
                    android:id="@+id/txtPlanTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Plan 0-4 Years"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_12sdp"
                    app:CustomTextviewFont="@string/textsemibold" />

                <com.dnk.dreamchildparenting.Custom.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:text="The Blue Bell C 1101, Opp: Maharaja Farm"
                    android:textColor="@color/c_8d95a1"
                    android:textSize="@dimen/_11sdp"
                    app:CustomTextviewFont="@string/textsemimedium" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/loutAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="vertical">

                    <com.dnk.dreamchildparenting.Custom.CustomTextView
                        android:id="@+id/txtPlanAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Rs. 2000"
                        android:textColor="@color/colorPrimaryVariant"
                        android:textSize="@dimen/_12sdp"
                        app:CustomTextviewFont="@string/textsemibold" />

                    <com.dnk.dreamchildparenting.Custom.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Amount"
                        android:textColor="@color/c_8d95a1"
                        android:textSize="@dimen/_11sdp"
                        app:CustomTextviewFont="@string/textsemimedium" />
                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:src="@drawable/icn_right_arrow"
                    app:tint="@color/colorPrimaryVariant" />
            </LinearLayout>
        </RelativeLayout>

        <com.dnk.dreamchildparenting.Custom.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/change_address_btn_bg"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_15sdp"
            android:paddingVertical="@dimen/_5sdp"
            android:text="+ Add Dream Child Kit"
            android:textColor="@color/colorPrimaryVariant"
            android:textSize="@dimen/_12sdp"
            app:CustomTextviewFont="@string/textbold" />
    </LinearLayout>

</RelativeLayout>