<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp">

        <RelativeLayout
            android:id="@+id/loutMain"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:background="@drawable/layer"
            android:backgroundTint="@color/colorPrimaryVariant"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icnLogo"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_80sdp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/_15sdp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_one"
                android:visibility="gone" />

            <com.dnk.dreamchildparenting.Custom.CustomTextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:text="0-4 YEARS"
                android:textColor="@color/white"
                android:textSize="@dimen/_23sdp"
                app:CustomTextviewFont="@string/textsemimedium" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_75sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:background="@drawable/go_round_btn"
            android:padding="@dimen/_3sdp">

            <com.dnk.dreamchildparenting.Custom.CustomTextView
                android:id="@+id/imgGo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle"
                android:backgroundTint="@color/colorPrimaryVariant"
                android:gravity="center"
                android:text="GO"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                app:CustomTextviewFont="@string/textbold" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>