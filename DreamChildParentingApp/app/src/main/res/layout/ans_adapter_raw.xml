<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10sdp"
    android:background="@drawable/selected_language_bg"
    android:paddingHorizontal="@dimen/_10sdp"
    android:paddingVertical="@dimen/_15sdp">

    <ImageView
        android:id="@+id/icnCheck"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:src="@drawable/icn_check" />

    <com.dnk.dreamchildparenting.Custom.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_toRightOf="@+id/icnCheck"
        android:text="Very satisfied, Somewhat dissatisfied."
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp"
        app:CustomTextviewFont="@string/textsemiregular" />
</RelativeLayout>