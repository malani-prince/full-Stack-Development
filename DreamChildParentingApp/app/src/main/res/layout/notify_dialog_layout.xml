<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <com.vlstr.blurdialog.BlurDialog
        android:id="@+id/blurView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/_20sdp"
        android:background="@drawable/notify_dialog_bg"
        android:visibility="visible"
        app:blurDialogCornerRadius="@dimen/_10sdp"
        app:blurDialogDuration="length_infinite"
        app:blurDialogTitle=""
        app:blurOverlayColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff"
            android:paddingVertical="@dimen/_10sdp"
            android:paddingHorizontal="@dimen/_10sdp">

            <com.dnk.dreamchildparenting.Custom.CustomTextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Dream Child Parenting"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_17sdp"
                app:CustomTextviewFont="@string/textbold" />

            <com.dnk.dreamchildparenting.Custom.CustomTextView
                android:id="@+id/txtMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center_vertical"
                android:text="Please enter Otp"
                android:textColor="@color/c_787878"
                android:textSize="@dimen/_14sdp"
                app:CustomTextviewFont="@string/textsemibold" />

            <com.dnk.dreamchildparenting.Custom.CustomTextView
                android:id="@+id/btnOk"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/lite_blue_button"
                android:gravity="center"
                android:text="Ok"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sdp"
                app:CustomTextviewFont="@string/textsemibold" />
        </LinearLayout>
    </com.vlstr.blurdialog.BlurDialog>


</RelativeLayout>